/* pages/bility_login/bility_login.wxss */
li{
    list-style: none;
}
.bility_form{
    width: 100%;
    box-sizing: border-box;
    background: #f6f5fa;
    box-shadow: 2px 3px 5px #ddd;
    overflow: hidden;
    overflow-x: hidden;
}
.bility_info{
    display: flex;
    justify-content: space-between;
    width: 100%;
    height: 90rpx;
    border-bottom: 1px solid #acacac;
    background: #ffffff;
    align-items: center;
}
.bility_info p,.bility_info input{
    font-size: 30rpx;
}
.bility_info p{
    margin-left: 20rpx;
}
.bility_info input{
    text-align: right;
    margin-right: 20rpx;
}

/* textarea */
 .bility_textarea textarea{
     width: 100%;
     height: 130rpx;
     border:none;
     font-size: 30rpx;
     resize: none;
     padding-right: 20rpx;
     text-align: left;
 }
 .bility_textarea{
     margin-top: 20rpx;
     border-bottom: 1px solid #acacac;
     background: #fff;
     z-index: 50;   
 }
 .link_name{
     margin-top: 20rpx;
 }

.bility_explain {
  padding:40rpx;
}
.bility_explain text{
    font-size: 27rpx;
    line-height: 50rpx;
    letter-spacing: 3rpx;
}
.bility_next{
    width: 100%;
    height: 90rpx;
    background: #448ff7;
    color: #ffffff;
    font-size: 27rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 80;
}

/* city */
.link_city{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 90rpx;
  border-bottom: 1px #acacac solid;
  padding-left: 20rpx;
  padding-right: .5rem;
  font-size: 30rpx;
  }
  .chooseCity{
    width: 100%;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    border-bottom: 1px solid #666;
  }
  .boxcity{
    position: absolute;
    width: 40%;
    right: 0;
    top:0;
    height: 60%;
    z-index: 110;
    background: #ffffff;
  }
  .citys{
    border-top: 1px solid #666; 
    height: 100%;
    overflow: hidden;
    overflow-y: scroll;
    background: #ffffff;
    z-index: 110;
  }
  .getCity{
    background: #ffffff;
    z-index: 110;
    opacity: 1;
  }
  .province{
    height: 100%;
  }
  .citys::-webkit-scrollbar {
    display: none;
  }
  ul{
    margin:0;
    padding:0;
    z-index: 110;
  }
 li{
  list-style: none;
  margin-bottom: 35rpx;
  font-size: 30rpx;
  display: block;
  z-index: 110;
  background: #ffffff;
}
.chooseTit {
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 80rpx;
  text-align: center;
  background: #448ff7;
  align-items: center;
}
.chooseTit p{
  color: #ffffff;
  font-size: 32rpx;
}
.mask{
  position: absolute;
  width: 100%;
  height: 400%;
  background: black;
  opacity: .7;
  top:0;
  left: 0;
  z-index: 90;
}

/* 下拉框 */
.top {
  width: 400rpx;
  height: 95rpx;
  line-height: 95rpx;
  font-size: 30rpx;
  z-index: 99;
}

.top-text {
  float: left;
}

/* 下拉框 */
.top-selected {
  width: 54%;
  display: flex;
  float: right;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ccc;
  border-top:none;
  border-bottom: none;
  padding: 0 10rpx;
  font-size: 30rpx;
}

/* 下拉内容 */

.select_box {
  background-color: #fff;
  width: 60%;
  height: 300rpx;
  float: right;
  position: relative;
  right: 0;
  overflow: hidden;
  text-align: left;
  animation: myfirst 0.3s;
  font-size: 30rpx;
  z-index: 100;
  overflow-y: scroll;
}

.select_one {
  padding-left: 20rpx;
  width: 100%;
  height: 90rpx;
  position: relative;
  line-height: 90rpx;
  border-bottom: 1px solid #ccc;
}

/* 下拉过度效果 */

@keyframes myfirst {
  from {
    height: 0rpx;
  }

  to {
    height: 300rpx;
  }
}

/* 问题选项 */
.optins_info{
    display: flex;
    flex-direction: column;
    width: 100%;
    background: #ffffff;
    margin-top: 20rpx;
}
.optins_info p{
    display: flex;
    align-items: center;
    padding-left: 20rpx;
    box-sizing: border-box;
    font-size: 30rpx;
    height: 90rpx;
    border-bottom: 1px solid #acacac;
}
.bility_info_option{
    width: 100% !important;
    background: #ffffff !important;
    padding-left: 20rpx !important;
    display: flex !important;
    flex-direction: column !important;
    justify-content: space-around !important; 
    box-sizing: border-box;
}
/* 未选中  样式*/
.wx-radio-input{
  width: 100% !important;
}
radio{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
radio-group label{
  font-size: 30rpx !important;
}
radio .wx-radio-input{
   width: 37rpx !important;
   height: 37rpx !important;
   border-radius: 50%;
}

/* 选中  样式(无边框、紫色背景 -- 可自定义) */
radio .wx-radio-input.wx-radio-input-checked{
   border: none;
   background: #448ff7 !important;
}

/* 选中时 对勾样式 （白色对勾 -- 可自定义） */
radio .wx-radio-input.wx-radio-input-checked::before{
   width: 37rpx;   /* 选中时对勾大小，不要超过背景的尺寸 */
   height: 37rpx;   /* 选中时对勾大小，不要超过背景的尺寸 */
   line-height: 37rpx;
   border-radius: 50%;
   text-align: center;
   font-size: 35rpx; /* 对勾大小 */
   color: #fff; /* 对勾颜色 */
   background: transparent;
   /* transform: translate(-50%, -50%) scale(1);
   -webkit-transform: translate(-50%, -50%) scale(1); */
}

/* 分数 */
.bility_total {
    width: 100%;
    height: 130rpx;
    background: #ffffff;
    margin-top:20rpx;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    font-size: 40rpx;
    color: #448ff7;
    letter-spacing: 3rpx;
}
